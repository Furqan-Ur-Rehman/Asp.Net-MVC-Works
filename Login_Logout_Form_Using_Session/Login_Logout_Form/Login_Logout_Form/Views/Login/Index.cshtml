@model Login_Logout_Form.Models.User
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-md-4" style="margin:auto;">
        <div style="border:5px black ridge; padding:10px;">

            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
            <table height="200">
                
                <tr>
                    <th style="font-size:25px;" class="text-center" colspan="2">LOGIN</th>
                    
                </tr>
                <tr><th style="font-size:18px; color:red;" class="text-center" colspan="2">@ViewData["LoginFailed"]</th></tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "form-label" })</td>
                    <td>
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @Value= ViewBag.UserName })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    </td>

                </tr>

                <tr>
                    <td>@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "form-label" })</td>
                    <td>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Password } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </td>
            </tr>
                <tr>
                    <td>@Html.CheckBoxFor(model => model.Rememberme, new { @class = "form-check"})</td>
                    <td>@Html.LabelFor(model => model.Rememberme, htmlAttributes: new { @class = "form-label"})</td>
                </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Login" name="login" class="btn btn-primary" />
                    <a href="/Login/Reset" class="btn btn-danger">Reset</a>
                </td>
            </tr>
            </table>
            }
        </div>
    </div>
</div>